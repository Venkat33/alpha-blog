<h1> All alpha-bloggers</h1>
<%= will_paginate %>
<% @users.each do |user| %>
<ul><li>
<%= link_to gravatar_for(user), user_path(user)%>
</li>
<li>
<%= link_to user.username, user_path(user) %>
</li>
<small>
<%= pluralize(user.articles.count, "article") if user.articles %> </small></li>
</ul>
<%= link_to "delete this users", user_path(user), method: :delete %>
<% if logged_in? and current_user.admin? %>
data: {confirm: "are you sure delete the user and articles"} %>
<% end %>
<%= will_paginate %>
<% end %>
