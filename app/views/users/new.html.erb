
<% if @user.errors.any? %>
<h2> the following error prevented the article form getting created</h2>
<ul>
<%= @user.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for @user do |f| %>
<p>
  <%= f.label :signup %></br>
  <%= f.text_field :signup %></p>
  <p>
  <%= f.label :description %></br>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>

<%= link_to "Back to article", articles_path %>
